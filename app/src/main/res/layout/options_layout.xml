<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#FAF9F9"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:padding="5dp"
        android:background="#252525"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radiobtnX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Player 1 - X"
                android:textStyle="bold"
                android:textSize="18sp"
                android:checked="true"
                android:buttonTint="#F8F7F7"
                android:textColor="#F8F7F7"/>

            <RadioButton
                android:id="@+id/radioBtnO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="#F8F7F7"
                android:buttonTint="#F8F7F7"
                android:textSize="18sp"
                android:text="Player 1 - O" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#252525"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:text="Player 1 :"
            android:textColor="#F8F7F7"
            android:textStyle="bold"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:textColor="#F8F7F7"
            android:textCursorDrawable="@null"
            android:backgroundTint="#F8F7F7"
            android:text="Player1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#252525"
        android:layout_marginTop="0dp"
        android:layout_marginHorizontal="10dp"

        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:text="Player 2 :"
            android:textColor="#F8F7F7"
            android:textStyle="bold"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:textColor="#F8F7F7"
            android:textCursorDrawable="@null"
            android:backgroundTint="#F8F7F7"
            android:text="Player2"/>
    </LinearLayout>

    <Button
        android:id="@+id/button_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="#252525"
        android:textColor="#F8F7F7"
        android:text="OK" />

</LinearLayout>